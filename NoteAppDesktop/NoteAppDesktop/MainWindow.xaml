<Window x:Class="NoteAppDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Note App" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBox x:Name="txtTitle" Margin="0,0,0,10" Text="Title"/>
            <TextBox x:Name="txtContent" Margin="0,0,0,10" Text="Content"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Create" Click="CreateNoteButton_Click" Margin="5"/>
                <Button Content="Update" Click="UpdateNoteButton_Click" Margin="5"/>
                <Button Content="Delete" Click="DeleteNoteButton_Click" Margin="5"/>
                <Button Content="Refresh" Click="RefreshNotesButton_Click" Margin="5"/>
            </StackPanel>
            <ListBox x:Name="lstNotes" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
